 <h1 class="container6">Nieuw lid registreren: </h1><br><br>
    <form class="container6" action="/register" method="post" enctype="multipart/form-data">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br><br>
        <label for="password">Wachtwoord:</label>
        <input type="password" id="password" name="password" required>
        <br><br>
        <label for="voornaam">Voornaam:</label>
        <input type="text" id="voornaam" name="voornaam" required>
        <br><br>
        <label for="achternaam">Achternaam:</label>
        <input type="text" id="achternaam" name="achternaam" required>
        <br><br>
        <label for="postcode">Postcode:</label>
        <input type="text" id="postcode" name="postcode" >
        <br><br>
                       <label for="instrument">Instrument:</label>
                             <input list="instrumentenList" id="instrument"  name="instrument" <br>
                             <datalist id="instrumentenList">
                               <% instrumenten.forEach(function(instrument) { %>
                              <option value="<%= instrument %>">
                              <% }); %>
                            </datalist>
        <br><br>
        <label for="rlvl">Rlvl:</label>
        <input type="text" id="rlvl" name="rlvl" >
        <br><br>
            <input type="file" name="afbeelding" accept="image/*">
   
   <br><br>
        <button class="container6" type="submit">Registreren</button>
    </form>
