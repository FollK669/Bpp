          <label class="kalam-bold" for="email"> &nbsp;&nbsp;&nbsp;&nbsp;Email &nbsp;&nbsp;&nbsp;&nbsp;</label><br>
              <input class="kalam-bold" type="email"  name="username" oninput="this.removeAttribute('placeholder')">
